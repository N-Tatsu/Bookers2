<h1>User info</h1>
<div>
  <p><%= image_tag @current_user.get_profile_image(100,100) %></p>
  <p><%= @current_user.name %></p>
  <p><%= @current_user.introduction %></p>
</div>

<% if @user == @current_user %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
<% end %>

<h1>New Book</h1>
<%= form_with model: @new_book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>

<h1>Users</h1>

<table>
 
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  
   <% @users.each do |user| %>
  <tbody>
    <tr>
       <td><%= image_tag user.get_profile_image(100,100) %></td>
       <td><%= user.name %></td>
       <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>