<h1>User info</h1>
<div>
  <p><%= image_tag @current_user.get_profile_image(100,100) %></p>
  <p><%= @current_user.name %></p>
  <p><%= @current_user.introduction %></p>
</div>

<li>
<%= link_to "Edit", edit_user_path(@current_user) %>
</li>

<h1>New Book</h1>
<%= form_with model: @new_book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>