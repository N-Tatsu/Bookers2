<h1>User info</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
</div>

<% if @user == current_user %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
<% end %>

<h1>New Book</h1>
<%= form_with model: @new_book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>

<table>
 
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
   <% @books.each do |book| %>
  <tbody>
    <tr>
       <td><%= link_to user_path(book.user.id) do %>
           <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.user.id) %></td>
       <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

