<h1>User info</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
</div>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>
<table>
 
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
  </thead>
  
   <% @books.each do |book| %>
  <tbody>
    <tr>
       <td><%= image_tag @user.get_profile_image(100,100) %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>





