<h1>User info</h1>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>
<%= @books.each do |book| %>
<div>
  <%= image_tag book.get_image.get_profile_image %>
  <p>  <%= image_tag book.user.get_profile_image(100,100)%></p>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Opinion</p>
  <span><%= book.body %></span>
  
</div>
  
<% end %>