<h1>User info</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
</div>

<li>
<%= link_to "Edit", edit_book_path %>
</li>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>

<table>
 
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
  </thead>
  
   <% @books.each do |book| %>
  <tbody>
    <tr>
       <td><%= image_tag @user.get_profile_image(100,100) %></td>
       <td><%= link_to book.title, user_path %></td>
       <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

