<%= render 'list', user: @user, new_book: @new_book %>

<h1>Books</h1>

<table>
 
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
   <% @books.each do |book| %>
  <tbody>
    <tr>
       <td><%= link_to user_path(book.user.id) do %>
           <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.user.id) %></td>
       <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

