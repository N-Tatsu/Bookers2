<%= render 'list', user: @user, new_book: @new_book %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
       <td><%= image_tag @user.get_profile_image(100,100) %>
           <p><%= link_to @user.name, @user_path %></p>
       </td>
       </td>
       <td><%= link_to @book.title, book_path(@book.id) %></td>
       <td><%= @book.body %></td>
       <% if @book.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@book) %></td>
       <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
       <% end %>
    </tr>
  </tbody>
</table>

