
<h1>User info</h1>
<div>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <p><%= user.name %></p>
  <p><%= user.introduction %></p>
</div>

<li>
<%= link_to "Edit", edit_user_path(user) %>
</li>

<h1>New book</h1>
<%= form_with model: new_book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>
